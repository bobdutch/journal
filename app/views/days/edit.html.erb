<h1>Editing day</h1>

<% form_for(@day) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :stuff_that_happened %><br />
    <%= f.text_area :stuff_that_happened %>
  </p>
  <p>
    <%= f.label :when %><br />
    <%= f.date_select :when %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @day %> |
<%= link_to 'Back', days_path %>